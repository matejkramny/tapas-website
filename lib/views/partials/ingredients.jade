.modal-header
    h1 Change ingredients for {{ item.obj.name }}
.modal-body
    .row
        .col-sm-4.col-xs-12(ng-repeat="ingredient in item.obj.ingredients", ng-init="setIngredientValues(ingredient)")
            .btn.col-xs-12(ng-click="setIngredient(ingredient)", ng-class="{'btn-danger': ingredient.value==0, 'btn-success': ingredient.value != 0}") {{ ingredient.name }}&nbsp;
                i.fa.fa-plus(ng-show="ingredient.value==2")
.modal-footer
    a.btn.btn-success(ng-click="ok()")
        i.fa.fa-check
        |  Submit